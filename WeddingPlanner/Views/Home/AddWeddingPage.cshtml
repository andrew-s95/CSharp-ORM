@model Wedding
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Add Wedding</title>
</head>
<body>
    <h1>Plan Your Wedding <a href="dashboard" class="btn btn-primary">Dashboard</a> <a href="/logout" class="btn btn-danger">Log Out</a></h1>
    <form asp-action="AddWedding" asp-controller="Home" method="post">
    <div class="form-group">
        <label asp-for="WedderOne">Wedder One</label>
        <span asp-validation-for="WedderOne"></span>
        <input asp-for="WedderOne" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="WedderTwo">Wedder Two</label>
        <span asp-validation-for="WedderTwo"></span>
        <input asp-for="WedderTwo" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Date"></label>
        <span asp-validation-for="Date"></span>
        <input type="date" asp-for="Date" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <span asp-validation-for="Address"></span>
        <input asp-for="Address" class="form-control">
    </div><br>
    <input type="submit" class="btn btn-success">
    </form>
    
</body>
</html>
