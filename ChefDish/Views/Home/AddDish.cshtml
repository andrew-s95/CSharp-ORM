@model Dish

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body>
    <h1>Add a Dish!</h1>
    <a href="/">Home</a>
    <form asp-action="AddDish" asp-controller="Home" method="POST">
        <label for="DishName">Name of Dish</label>
        <span asp-validation-for="DishName"></span>
        <input type="text" asp-for="DishName">
       
        <label for="ChefId">Chef</label>
        <span asp-validation-for="ChefId"></span>
        <select asp-for="ChefId">
            <option selected>Choose a Chef</option>
            @foreach(Chef chef in @ViewBag.chefs)
            {
                <option value="@chef.ChefId">@chef.FirstName</option>
            }
        </select>

        <label for="Tastiness">Tastiness</label>
        <span asp-validation-for="Tastiness"></span>
        <select id="Tastiness" class="form-control" asp-for="Tastiness">
            <option selected>Tastiness</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>
        
        <label for="Calories"># of Calories</label>
        <span asp-validation-for="Calories"></span>
        <input type="text" asp-for="Calories">
            
        <label for="Description">Description</label>
        <span asp-validation-for="Description"></span>
        <textarea type="text" asp-for="Description"></textarea>

        <button>Submit</button>
    </form>
    
</body>
</html>